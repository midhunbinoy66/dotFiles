* {
    border: none;
    border-radius: 10;
    font-family: "JetBrains Mono";
    font-weight: 500;
    font-size: 14px;
    padding: 0;
    color: #ffffff; /* White text */
}

window#waybar {
    background: rgba(255, 255, 255, 0.1); /* Transparent white */
}

tooltip {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    
}

#workspaces {
    margin: 4px;
}

#workspaces button {
    all: initial;
    padding: 4px 6px;
    color: #ffffff;
}

#workspaces button.focused {
    color: #808080; /* Arch blue */
}

#workspaces button.urgent {
    color: #ff5555;
}

#clock {
    margin: 0;
    font-size: 16px;
}

#cpu,
#tray,
#battery,
#network,
#pulseaudio {
    margin: 4px;
    padding: 2px 6px;
}

